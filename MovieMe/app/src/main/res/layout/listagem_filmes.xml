<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/listagem_View"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:id="@+id/btnDel"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_delete_white_24dp"
        android:background="@color/colorRed"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:id="@+id/btnShare"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_share_white_24dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@id/btnDel"
        android:id="@+id/img_faixa"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_faixa"
        android:layout_marginLeft="15dp"
        android:textSize="23dp"
        android:id="@+id/txt_nome"
        android:text="Munique"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_nome"
        android:layout_below="@id/txt_nome"
        android:id="@+id/txt_diretor"
        android:text="Steven Spielberg" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_faixa"
        android:layout_alignLeft="@id/txt_nome"
        android:layout_marginTop="10dp"
        android:text="ComÃ©dia"
        android:id="@+id/txt_genero"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btnShare"
        android:layout_alignBottom="@id/img_faixa"
        android:id="@+id/txt_ano"
        android:text="1996" />

</RelativeLayout>
